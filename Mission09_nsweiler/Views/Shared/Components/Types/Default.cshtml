@{
}

@model IEnumerable<string>

@* IEnumerable puts the data into a format that is easy to enumerate through. Easily loop through the incoming data *@

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-categoryType="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>
   

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-categoryType="@t" asp-route-pageNum="1"
           class=" btn @( ViewBag.Selected == t ? "btn-primary" : "btn-outline-secondary")">@t</a>
    }

</div>